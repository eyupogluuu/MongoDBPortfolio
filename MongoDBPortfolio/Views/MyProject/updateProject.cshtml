@model MyProject
@{
    ViewData["Title"] = "updateProject";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card header" style="text-align:center; background-color:midnightblue; color:white;">Proje Güncelle</h2>
<br />
<div class="container">
    <br />
    <form method="post">
        <input type="hidden" asp-for="projectID" />
        <label>Başlık:</label>
        <input type="text" class="form-control" asp-for="title" style="border:1px solid #000" />
        <br />
        <label>Görsel Yolu:</label>
        <input type="text" class="form-control" asp-for="imageUrl" style="border:1px solid #000" />
        <br />
        <button class="btn btn-success"> Güncelle </button>
    </form>
</div>



