@model List<MyProject>
@{
    ViewData["Title"] = "projectList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card header" style="text-align:center; background-color:midnightblue; color:white">Projelerim </h2>

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.projectID</td>
            <td>@item.title</td>
            <td>@item.imageUrl</td>
            <td><a class="btn btn-outline-danger" href="/MyProject/deleteProject/@item.projectID">Sil</a></td>
            <td><a class="btn btn-outline-success" href="/MyProject/updateProject/@item.projectID">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" href="/MyProject/addProject/">Yeni Proje Ekle</a>

