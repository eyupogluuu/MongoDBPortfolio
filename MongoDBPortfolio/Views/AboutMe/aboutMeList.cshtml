@model List<AboutMe>
@{
    ViewData["Title"] = "aboutMeList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card header" style="text-align:center; background-color:midnightblue; color:white">Bilgilerim Listesi</h2>

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Ünvan</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.aboutMeID</td>
            <td>@item.tittle</td>
            <td>@item.name</td>
            <td>@item.surname</td>
            <td><a class="btn btn-outline-danger" href="/AboutMe/deleteAboutMe/@item.aboutMeID">Sil</a></td>
            <td><a class="btn btn-outline-success" href="/AboutMe/updateAboutMe/@item.aboutMeID">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" href="/AboutMe/addAboutMe/">Yeni Bilgi Ekle</a>

