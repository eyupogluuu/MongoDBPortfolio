@model List<Offer>
@{
    ViewData["Title"] = "offerLis";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card header" style="text-align:center; background-color:midnightblue; color:white">Kampanya Listesi</h2>

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.offerID</td>
            <td>@item.offerName</td>
            
            <td><a class="btn btn-outline-danger" href="/Offer/deleteOffer/@item.offerID">Sil</a></td>
            <td><a class="btn btn-outline-success" href="/Offer/updateOffer/@item.offerID">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a class="btn btn-outline-primary" href="/Offer/addAOffer/">Yeni Kampanya Ekle</a>
