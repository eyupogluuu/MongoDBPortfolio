@model List<Offer>
<div class="container-xxl py-6" id="about">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                @await Component.InvokeAsync("AboutPartialHeader")
                @foreach (var item in Model)
                {
                    <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.offerName</p>
                }
               
                
                <a class="btn btn-primary py-3 px-5 mt-3" href="">Daha Fazla</a>
            </div>

            @await Component.InvokeAsync("StatisticPartialComponent")
        </div>
    </div>
</div>