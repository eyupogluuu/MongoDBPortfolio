@model Testimonial
@{
    ViewData["Title"] = "addTestimonial";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card header" style="text-align:center; background-color:midnightblue; color:white;">Referans Girişi</h2>
<br />
<div class="container">
    <br />
    <form method="post">
        <label>İsim</label>
        <input type="text" class="form-control" name="name" style="border:1px solid #000" />
        <br />
        <label>Soyisim:</label>
        <input type="text" class="form-control" name="surname" style="border:1px solid #000" />
        <br />
        <label>Ünvan:</label>
        <input type="text" class="form-control" name="tittle" style="border:1px solid #000" />
        <br />
        <label>Değerlendirme:</label>
        <input type="text" class="form-control" name="descreption" style="border:1px solid #000" />
        <br />
        <label>Görsel:</label>
        <input type="text" class="form-control" name="imageUrl" style="border:1px solid #000" />
        <br />
        <button class="btn btn-primary"> Kaydet </button>
    </form>
</div>

